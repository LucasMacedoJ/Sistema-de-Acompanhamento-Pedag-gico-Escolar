extends ../tela.pug

block content
  h1 Novo Apoio

  form(action=`/apoia/nova?aluno=${alunoId}` method="POST")
    label(for="descricao") Descrição do Apoio:
    textarea(name="descricao" id="descricao" rows="4" cols="40" required)
    br
    label(for="data") Data do Apoio:
    input(type="date" name="data" id="data" required)
    br
    button(type="submit") Salvar Apoio
    a(href=`/alunos/detalhes/${alunoId}` style="margin-left:1rem;")
      button(type="button") Cancelar