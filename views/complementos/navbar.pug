style.
  .navbar-collapsed {
    width: 60px !important;
    transition: width 0.3s;
  }
  .navbar-collapsed h2,
  .navbar-collapsed ul li a span {
    display: none;
  }
  .navbar-toggle-btn {
    background: none;
    border: none;
    color: #fff;
    font-size: 1.5rem;
    margin-bottom: 2rem;
    cursor: pointer;
    outline: none;
  }

