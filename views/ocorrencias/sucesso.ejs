<%- include('../tela') %>

<h1>Ocorrência cadastrada com sucesso!</h1>

<div class="container">
  <p><strong>Descrição:</strong> <%= ocorrencia.descricao %></p>
  <p><strong>Tipo:</strong> <%= ocorrencia.tipo %></p>
  <p><strong>Responsável:</strong> <%= ocorrencia.responsavel %></p>
  <p><strong>Data:</strong> 
    <%= ocorrencia.dataAbertura 
      ? new Date(ocorrencia.dataAbertura).toLocaleDateString('pt-BR') 
      : '—' %>
  </p>

  <% if (ocorrencia.aluno) { %>
    <a class="btn" href="/alunos/detalhes/<%= ocorrencia.aluno._id %>">Voltar para detalhes do aluno</a>
  <% } else { %>
    <a class="btn" href="/alunos/">Voltar para lista de alunos</a>
  <% } %>
</div>
