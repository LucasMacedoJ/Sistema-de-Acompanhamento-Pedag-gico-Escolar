<%- include('../tela') %>

<h1>Lista de nepres do Aluno</h1>

<table>
  <thead>
    <tr>
      <th>Descrição</th>
      <th>Data Início</th>
      <th>Data Fim</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% nepres.forEach(function(nepre) { %>
      <tr>
        <td><%= nepre.descricao %></td> 
        <td><%= nepre.dataInicio ? nepre.dataInicio.toLocaleDateString('pt-BR') : '' %></td>
        <td><%= nepre.dataFim ? nepre.dataFim.toLocaleDateString('pt-BR') : '' %></td>
        <td>
          <a class="btn" href="/nepre/detalhes/<%= nepre._id %>">
            Detalhes
          </a>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>

<a class="btn" href="/alunos/detalhes/<%= alunoId %>">Voltar para detalhes do aluno</a>
